{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@main/*": ["src/main/*"],
			"@ui/*": ["src/renderer/*"],
			"@preload/*": ["src/preload/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"allowJs": false
	},
	"include": ["src"]
}
